{
  "tools": [
    {
      "name": "medassist_triage",
      "displayName": "Medical Triage Tool",
      "description": "Analyze symptoms and provide medical triage recommendations with safety checks",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "User identifier"
          },
          "symptoms": {
            "type": "string",
            "description": "Patient's symptoms description"
          },
          "context": {
            "type": "string",
            "description": "Additional medical context or history"
          }
        },
        "required": ["user_id", "symptoms"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "Medical category of symptoms"
          },
          "urgency": {
            "type": "string",
            "description": "Urgency level: low, moderate, high"
          },
          "recommended_action": {
            "type": "string",
            "description": "Recommended action: self_care, primary_care, go_to_er"
          },
          "red_flags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Critical symptoms detected"
          },
          "reasoning": {
            "type": "string",
            "description": "Explanation of the triage decision"
          }
        }
      }
    },
    {
      "name": "medassist_medication",
      "displayName": "Medication Safety Tool",
      "description": "Check medication interactions and safety warnings",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "User identifier"
          },
          "medications": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of medications to check"
          }
        },
        "required": ["user_id", "medications"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "risk_level": {
            "type": "string",
            "description": "Overall risk level: low, moderate, high"
          },
          "conflicts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "medications": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "severity": {"type": "string"},
                "reason": {"type": "string"}
              }
            },
            "description": "Detected medication conflicts"
          },
          "guidance": {
            "type": "string",
            "description": "Safety guidance and recommendations"
          }
        }
      }
    },
    {
      "name": "medassist_health_assessment",
      "displayName": "Comprehensive Health Assessment",
      "description": "Run parallel health assessment with multiple agents",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "User identifier"
          },
          "symptoms": {
            "type": "string",
            "description": "Patient's symptoms"
          },
          "medications": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Current medications"
          },
          "context": {
            "type": "string",
            "description": "Additional context"
          }
        },
        "required": ["user_id", "symptoms"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "session_id": {
            "type": "string",
            "description": "Assessment session ID"
          },
          "triage": {
            "type": "object",
            "description": "Triage results"
          },
          "medication_safety": {
            "type": "object",
            "description": "Medication safety results"
          },
          "coordination": {
            "type": "object",
            "description": "Cross-agent coordination insights"
          }
        }
      }
    }
  ]
}